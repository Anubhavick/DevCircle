# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Configuration (fill this in later)
MONGODB_URI=mongodb://localhost:27017/devcircle
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/devcircle?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# GitHub OAuth (get these from GitHub Developer Settings)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback

# Frontend URL
CLIENT_URL=http://localhost:3000

# College Domain for Email Verification (example: @youruniversity.edu)
COLLEGE_DOMAIN=@youruniversity.edu
COLLEGE_ID=your_college_slug
