{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",             /* ROOT IS NOW THE 'server' FOLDER ITSELF */
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["./*.ts"],       /* INCLUDE .ts FILES DIRECTLY IN THE 'server' FOLDER */
  "exclude": ["node_modules"]
}